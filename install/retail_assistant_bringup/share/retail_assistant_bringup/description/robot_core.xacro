<?xml version ="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

     <material name="green">
        <color rgba="0 1 0 1"/>
    </material>


    <material name="orange">    
        <color rgba="1 0.647 0 1"/>
    </material>

    <material name="blue">  
        <color rgba="0 0 1 1"/>
    </material>

    <material name="black">  
        <color rgba="0 0 0 1"/>
    </material>
    <!--  Base LINk  -->
    <link name="base_link">
    
    </link>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
    <link name="base_footprint">
    </link>
    
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>
<!--   Chassis    -->
    <link name="chassis">
        <visual>
            <origin xyz="0.165 0 0.2"/>
            <geometry>
                <box size="0.3302 0.4572 0.3048"/>
            </geometry>
            <material name="blue"/>
        </visual>
         <collision>
            <origin xyz="0.165 0 0.2"/>
            <geometry>
                <box size="0.3302 0.4572 0.3048"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="4.5" x="0.3302" y="0.4572" z="0.3048">
            <origin xyz="0.165 0 0.1524" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
      <material>Gazebo/Blue</material>
    </gazebo>
    <!-- Left tread -->


<!-- Left invisble wheel to  actually drive do not add collision-->
<joint name="left_wheel_rear_joint" type="continuous">
  <parent link="base_link"/>
  <child link="left_rear_wheel"/>
  <origin xyz="0.025 0.25 0.05" rpy="-${pi/2} 0 0"/>
  <axis xyz="0 0 1"/>
</joint>

<link name="left_rear_wheel">
  <visual>
    <geometry>
      <cylinder radius="0.05" length="0.04"/>
    </geometry>
    <material name="orange"/>
  </visual>
  <collision>
    <geometry>
      <cylinder radius="0.05" length="0.04"/>
    </geometry>
  </collision>
  <xacro:inertial_cylinder mass="0.2" length="0.04" radius="0.05">
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </xacro:inertial_cylinder>
</link>


<gazebo reference="left_rear_wheel">
   <material>Gazebo/Orange</material>
</gazebo>
<!-- Right tread -->


<!-- Right invisble wheel to  actually drive do not add collision-->

<joint name="right_wheel_rear_joint" type="continuous">
  <parent link="base_link"/>
  <child link="right_rear_wheel"/>
  <origin xyz="0.025 -0.25 0.05" rpy="${pi/2} 0 0"/>
  <axis xyz="0 0 -1"/>
</joint>

<link name="right_rear_wheel">
  <visual>
    <geometry>
      <cylinder radius="0.05" length="0.04"/>
    </geometry>
    <material name="orange"/>
  </visual>
    <collision>
    <geometry>
      <cylinder radius="0.05" length="0.04"/>
    </geometry>
  </collision>
  <xacro:inertial_cylinder mass="0.2" length="0.04" radius="0.05">
    <origin xyz="0 0 0" rpy=" 0 0 0"/>
  </xacro:inertial_cylinder>
</link>
<gazebo reference="right_rear_wheel">
   <material>Gazebo/Orange</material>
</gazebo>
<!-- Right invisble wheel to  actually drive do not add collision-->

<!-- caster wheel-->
<joint name="caster_wheel_joint" type="fixed">
  <parent link="chassis"/>
  <child link="caster_wheel"/>
  <origin xyz="0.25 0 0.05" />
</joint>

<link name="caster_wheel">
  <visual>
    <geometry>
      <sphere radius="0.05"/>
    </geometry>
    <material name="black"/>
  </visual>
  <collision>
    <geometry>
      <sphere radius="0.05"/>
    </geometry>
  </collision>
  <xacro:inertial_sphere mass="0.2" radius="0.05">
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </xacro:inertial_sphere>
</link>
<gazebo reference="caster_wheel">
   <material>Gazebo/Black</material>
   <mu1 value="0.001"/>
   <mu2 value="0.001"/>
</gazebo>
</robot>